[user]
	name = Brian Rutledge
	email = bhrutledge@gmail.com
[color]
	ui = true
    interactive = auto
[core]
    autocrlf = input
    safecrlf = false
    excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
    co = checkout
    ci = commit
    st = status -s -b
    br = branch
    brv = branch -vv
    brl = !git branch -vv | cut -c 3- | awk '$3 !~/\\[/ { print $1 }'
    rv = remote -v
    ru = rev-parse --abbrev-ref --symbolic-full-name @{upstream}
    rp = rev-parse --abbrev-ref --symbolic-full-name @{push}
    diffw = diff --color-words
    diffn = diff --no-index
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    local = log --branches --not --remotes --oneline --decorate --simplify-by-decoration
    type = cat-file -t
    dump = cat-file -p
    root = rev-parse --show-toplevel
    head = symbolic-ref --short HEAD
[push]
    default = current
[include]
    path = .gitconfig.local
[github]
    user = bhrutledge
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
    conflictstyle = diff3
[difftool]
    prompt = false
[mergetool]
    prompt = false
    keepBackup = false
[difftool "meld"]
    trustExitCode = true
    cmd = open -W -a Meld --args \"$LOCAL\" \"$PWD/$REMOTE\"
[mergetool "meld"]
    trustExitCode = true
    cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\"
[filter "hawser"]
    clean = git hawser clean %f
    smudge = git hawser smudge %f
    required = true
[filter "lfs"]
    clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
    required = true
	process = git-lfs filter-process
[gui]
    recentrepo = /Users/brian/Code/es/es-site
    fontdiff = -family Hack -size 12 -weight normal -slant roman -underline 0 -overstrike 0
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	commit = yellow bold
	meta = yellow
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
