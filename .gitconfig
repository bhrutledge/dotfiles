[user]
	name = Brian Rutledge
	email = bhrutledge@gmail.com
[color]
    ui = auto
    interactive = auto
[core]
    autocrlf = input
    safecrlf = false
    excludesfile = ~/.gitignore
[alias]
    co = checkout
    ci = commit
    st = status -s -b
    br = branch
    brv = branch -vv
    rv = remote -v
    ru = rev-parse --abbrev-ref --symbolic-full-name @{upstream}
    rp = rev-parse --abbrev-ref --symbolic-full-name @{push}
    diffw = diff --color-words
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    local = log --branches --not --remotes --oneline --decorate --simplify-by-decoration
    type = cat-file -t
    dump = cat-file -p
    root = rev-parse --show-toplevel
    head = symbolic-ref --short HEAD
[push]
    default = current
[include]
    path = .gitconfig.local
[github]
    user = bhrutledge
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
    conflictstyle = diff3
[difftool]
    prompt = false
[mergetool]
    prompt = false
    keepBackup = false
[difftool "meld"]
    trustExitCode = true
    cmd = open -W -a Meld --args \"$LOCAL\" \"$PWD/$REMOTE\"
[mergetool "meld"]
    trustExitCode = true
    cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\"
[filter "hawser"]
    clean = git hawser clean %f
    smudge = git hawser smudge %f
    required = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    required = true
[gui]
    recentrepo = /Users/brian/Code/es/es-site
    fontdiff = -family Hack -size 12 -weight normal -slant roman -underline 0 -overstrike 0
