[user]
    name = Brian Rutledge
    email = bhrutledge@gmail.com
[color]
    ui = auto
    interactive = auto
[core]
    autocrlf = input
    safecrlf = true
    excludesfile = ~/.gitignore
    editor = vim
[alias]
    co = checkout
    ci = commit
    st = status -s -b
    br = branch
    diffw = diff --color-words
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    local = log --branches --not --remotes --oneline --decorate --simplify-by-decoration
    type = cat-file -t
    dump = cat-file -p
    root = rev-parse --show-toplevel
[push]
    default = current
[include]
    path = .gitconfig.local
[github]
    user = bhrutledge
[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
[difftool]
    prompt = false
[filter "hawser"]
    clean = git hawser clean %f
    smudge = git hawser smudge %f
    required = true
