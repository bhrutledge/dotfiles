layout_virtualenv() {
    local venv_path="$1"
    source ${venv_path}/bin/activate
}

layout_virtualenvwrapper() {
    local venv=${1:-${PWD##*/}}
    local venv_path="${WORKON_HOME}/$venv"
    layout_virtualenv $venv_path
}

layout_overmind() {
    export OVERMIND_PROCFILE=$PWD/Procfile
    export OVERMIND_SOCKET=$PWD/.overmind.sock
}
