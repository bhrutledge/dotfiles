[alias]
    aliases = config --get-regexp ^alias
    branches = branch --sort=-committerdate --sort=refname:rstrip=1 --format='\
%(refname:short) \
%(color:white dim)%(committerdate:short)%(color:reset) \
%(color:red)%(upstream:trackshort)\
%(if:notequals=origin)%(upstream:remotename)%(then)%(upstream:remotename)%(end)\
%(color:reset) \
%(if)%(HEAD)%(then)%(color:cyan)%(HEAD)%(color:reset)%(end)\
'
    # Status
    head = rev-parse --abbrev-ref HEAD
    root = rev-parse --show-toplevel
    stat = status --short --branch
    hist = log --pretty='format:%C(auto)%h %s%d' -n 50
    since = !git hist -n 1000 "${1:-'@{u}'}"..
    # Commits
    amend = commit --amend --no-edit
    fixup = commit --fixup
    squash = commit --squash
    all = !git add -A && git commit
    set = reset --hard
    # File lists
    staged = diff --name-only --staged
    modified = ls-files --modified
    new = ls-files --others --exclude-standard
    files = diff-tree --no-commit-id --name-only -r
    # Remotes
    publish = push --set-upstream origin HEAD
    upstream = rev-parse --abbrev-ref @{upstream}
    sync = !git pull upstream $(git head) && git push origin
    delete = !git push origin --delete $(git head)
[difftool]
    prompt = false
[mergetool]
    prompt = false
